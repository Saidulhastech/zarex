---
import "../styles/global.css";
import "lenis/dist/lenis.css";
import Container from "../components/ui/Container.astro";
import Link from "../components/ui/Link.astro";
import Button from "../components/ui/Button.astro";
import baseLayoutUrl from "../scripts/base-layout.js?url";
import AppImage from "../components/ui/AppImage.astro";
import { resolveImageUrl } from "../utils/resolveImage";

// Props interface for the layout
interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
  type?: "website" | "article";
  publishedTime?: string;
  author?: string;
  noindex?: boolean;
}

// Default values and site configuration
const SITE_NAME = "Zarex";
const SITE_URL = import.meta.env.SITE || "https://your-domain.com";
const DEFAULT_IMAGE = "/images/Open-graph-image.webp";
const TWITTER_HANDLE = "@yourhandle"; // Update with your Twitter handle

// Destructure props with defaults
const {
  title = "Zarex - LinkedIn Marketing SaaS",
  description = "Zarex helps teams generate LinkedIn leads faster with automation and analytics. Grow your LinkedIn profile with powerful marketing tools.",
  image = DEFAULT_IMAGE,
  canonicalURL = new URL(Astro.url.pathname, SITE_URL).href,
  type = "website",
  publishedTime,
  author,
  noindex = false,
} = Astro.props;

const [logoUrl, webclipUrl] = await Promise.all([
  resolveImageUrl("/images/logo.svg"),
  resolveImageUrl("/images/webclip.svg"),
]);

const imageIsRemote = image.startsWith("http");
const imageIsAsset = image.startsWith("/images/");
const resolvedImage = imageIsRemote
  ? image
  : imageIsAsset
    ? await resolveImageUrl(image)
    : image;
const ogImage = imageIsRemote ? image : new URL(resolvedImage, SITE_URL).href;

// Page title with site name
const fullTitle = title.includes(SITE_NAME) ? title : `${title} | ${SITE_NAME}`;

const currentPath = Astro.url.pathname.replace(/\/$/, "") || "/";
const normalizePath = (href: string | undefined): string => {
  const path = href?.split("#")[0] ?? "";
  const trimmed = path.replace(/\/$/, "");
  return trimmed === "" ? "/" : trimmed;
};
const isCurrent = (href: string | undefined): boolean =>
  normalizePath(href) === currentPath;
const isIn = (hrefs: string[]): boolean =>
  hrefs.some((href) => isCurrent(href));
const homeRoutes = ["/", "/home-two"];
const pagesRoutes = [
  "/blog",
  "/pricing-plan",
  "/integration",
  "/authentication/sign-up",
  "/integration/quick-fill",
  "/blog/19-best-linkedin-ad-examples-that-inspired",
  "/401",
  "/404",
  "/template-info/style-guide",
  "/template-info/licenses",
  "/template-info/changelog",
  "/template-info/instruction",
];

// Structured Data (JSON-LD)
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: SITE_NAME,
  url: SITE_URL,
  description: description,
};

const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: SITE_NAME,
  url: SITE_URL,
  logo: new URL(logoUrl, SITE_URL).href,
  sameAs: [
    "https://www.facebook.com/",
    "https://twitter.com/",
    "https://www.linkedin.com/",
    "https://www.instagram.com/",
  ],
};

let articleSchema: any;
if (type === "article") {
  articleSchema = {
    "@context": "https://schema.org",
    "@type": "Article",
    headline: title,
    description: description,
    image: ogImage,
    datePublished: publishedTime,
    author: {
      "@type": "Person",
      name: author || SITE_NAME,
    },
    publisher: {
      "@type": "Organization",
      name: SITE_NAME,
      logo: {
        "@type": "ImageObject",
        url: new URL(logoUrl, SITE_URL).href,
      },
    },
    mainEntityOfPage: {
      "@type": "WebPage",
      "@id": canonicalURL,
    },
  };
}

const combinedSchema: any[] = [websiteSchema, organizationSchema];
if (articleSchema) combinedSchema.push(articleSchema);
