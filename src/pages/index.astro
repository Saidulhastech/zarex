---
import BaseLayout from "../layouts/BaseLayout.astro";
import { home } from "../data/home";
import { getCollection } from "astro:content";
import HeroSection from "../components/sections/HeroSection.astro";
import PartnerSection from "../components/sections/PartnerSection.astro";
import AboutSection from "../components/sections/AboutSection.astro";
import ApproachSection from "../components/sections/ApproachSection.astro";
import FeaturesSection from "../components/sections/FeaturesSection.astro";
import WhyChooseSection from "../components/sections/WhyChooseSection.astro";
import GrowthSection from "../components/sections/GrowthSection.astro";
import SpecialFeaturesSection from "../components/sections/SpecialFeaturesSection.astro";
import IntegrationsSection from "../components/sections/IntegrationsSection.astro";
import TestimonialsSection from "../components/sections/TestimonialsSection.astro";
import BlogSection from "../components/sections/BlogSection.astro";
import ImpactSection from "../components/sections/ImpactSection.astro";

const posts = (await getCollection("blog"))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);
---

<BaseLayout
  title="Zarex - LinkedIn Marketing SaaS"
  description="Zarex helps teams generate high-quality LinkedIn leads faster with advanced marketing automation, real-time analytics, and seamless CRM integrations."
>
  <HeroSection hero={home.hero} />
  <PartnerSection partners={home.partners} />
  <AboutSection about={home.about} />
  <ApproachSection approach={home.approach} />
  <FeaturesSection features={home.features} />
  <WhyChooseSection whyChoose={home.whyChoose} />
  <GrowthSection growth={home.growth} />
  <SpecialFeaturesSection special={home.special} />
  <IntegrationsSection integrations={home.integrations} />
  <TestimonialsSection testimonials={home.testimonials} />
  <BlogSection blog={home.blog} posts={posts} />
  <ImpactSection impact={home.impact} />
</BaseLayout>
