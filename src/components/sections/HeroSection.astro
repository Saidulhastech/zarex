---
import { Image } from "astro:assets";
import { resolveImage } from "../../utils/resolveImage";
import Button from "../ui/Button.astro";

const { hero } = Astro.props;

// Resolve all images for the hero section
const leftTopImg = await resolveImage(hero.images.leftTop.src);
const leftBottomImg = await resolveImage(hero.images.leftBottom.src);
const middleTopImg = await resolveImage(hero.images.middleTop.src);
const middleBottomImg = await resolveImage(hero.images.middleBottom.src);
const rightTopImg = await resolveImage(hero.images.rightTop.src);
const rightBottomImg = await resolveImage(hero.images.rightBottom.src);
---

<section class="hero-section" data-hero>
  <div class="main-container">
    <div class="page-heading-and-button-wrap" data-hero-content>
      <div class="page-heading-block">
        <div class="page-subtitle-block">
          <span class="page-subtitle">{hero.eyebrow}</span>
        </div>
        <div class="page-title-block margin-top-24px max-width-500px">
          <h1 class="page-title">
            {hero.title.prefix}
            <span class="highlight-text v2">{hero.title.highlight}</span>
            {hero.title.suffix}
            <span class="linkedin-icon" aria-hidden="true">bv</span>
          </h1>
        </div>
      </div>
      <div class="hero-summary-and-button-wrap">
        <p class="hero-summary">
          {hero.summary.prefix}
          <span class="summary-bold">{hero.summary.highlight}</span>
          {hero.summary.suffix}
        </p>
        <div class="hero-button-group-block">
          <Button href={hero.primaryCta.href}>{hero.primaryCta.label}</Button>
          <div class="hero-video-lightbox-wrapper">
            <button
              type="button"
              class="hero-video-lightbox"
              aria-label={hero.secondaryCta.label}
              aria-haspopup="dialog"
              data-video-url={hero.secondaryCta.href}
            >
              <span class="hero-video-lightbox-icon">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="15"
                  height="21"
                  viewBox="0 0 15 21"
                  fill="none"
                  aria-hidden="true"
                >
                  <path
                    d="M13.871 9.71006C14.5445 10.195 14.5445 11.1975 13.871 11.6824L1.97601 20.2468C1.17219 20.8255 0.0507813 20.2511 0.0507813 19.2606L0.0507819 2.13186C0.050782 1.14136 1.17219 0.566934 1.97601 1.14569L13.871 9.71006Z"
                    fill="currentColor"></path>
                </svg>
              </span>
            </button>
            <div class="hero-video-lightbox-text">
              {hero.secondaryCta.label}
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="hero-image-container" data-hero-visuals>
      <div class="hero-single-column-block left-column">
        <div
          class="hero-single-image-block left-top hero-left-column-image-one rotate--11deg"
        >
          <Image
            src={leftTopImg as any}
            alt={hero.images.leftTop.alt}
            width={400}
            height={320}
            loading="eager"
            fetchpriority="high"
          />
        </div>
        <div class="hero-single-image-block left-bottom">
          <Image
            src={leftBottomImg as any}
            alt={hero.images.leftBottom.alt}
            class="hero-single-image"
            width={400}
            height={320}
            loading="eager"
            fetchpriority="high"
          />
        </div>
      </div>
      <div class="hero-single-column-block">
        <div class="hero-single-image-block middle-top">
          <Image
            src={middleTopImg as any}
            alt={hero.images.middleTop.alt}
            class="hero-single-image"
            width={400}
            height={320}
            loading="eager"
            fetchpriority="high"
          />
        </div>
        <div class="hero-single-image-block bottom">
          <Image
            src={middleBottomImg as any}
            alt={hero.images.middleBottom.alt}
            class="hero-single-image"
            width={400}
            height={320}
            loading="eager"
            fetchpriority="high"
          />
        </div>
      </div>
      <div class="hero-single-column-block v2">
        <div
          class="hero-single-image-block right-top rotate-21deg"
          data-hero-rotate
        >
          <Image
            src={rightTopImg as any}
            alt={hero.images.rightTop.alt}
            class="hero-single-image"
            width={400}
            height={320}
            loading="eager"
            fetchpriority="high"
          />
        </div>
        <div class="hero-single-image-block right-bottom">
          <Image
            src={rightBottomImg as any}
            alt={hero.images.rightBottom.alt}
            class="hero-single-image"
            width={400}
            height={320}
            loading="eager"
            fetchpriority="high"
          />
        </div>
      </div>
    </div>
  </div>
</section>

<div class="hero-video-modal" data-video-modal aria-hidden="true">
  <div class="hero-video-overlay" data-video-close></div>
  <div
    class="hero-video-dialog"
    role="dialog"
    aria-modal="true"
    aria-label="Demo video"
  >
    <button class="hero-video-close" type="button" data-video-close>
      <span class="sr-only">Close video</span>
      &#10005;
    </button>
    <div class="hero-video-frame" data-video-frame></div>
  </div>
</div>

<style>
  .hero-video-modal {
    position: fixed;
    inset: 0;
    z-index: 9999;
    display: none;
    align-items: center;
    justify-content: center;
    padding: 24px;
  }

  .hero-video-modal.is-open {
    display: flex;
  }

  .hero-video-overlay {
    position: absolute;
    inset: 0;
    background: rgba(8, 12, 20, 0.78);
    backdrop-filter: blur(4px);
  }

  .hero-video-dialog {
    position: relative;
    z-index: 1;
    width: min(92vw, 960px);
    background: #0e1522;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 40px 120px rgba(0, 0, 0, 0.55);
    border: 1px solid rgba(255, 255, 255, 0.08);
  }

  .hero-video-frame {
    width: 100%;
    aspect-ratio: 16 / 9;
    background: #000;
  }

  .hero-video-close {
    position: absolute;
    top: 14px;
    right: 14px;
    z-index: 2;
    width: 38px;
    height: 38px;
    border-radius: 999px;
    border: 0;
    background: rgba(15, 23, 42, 0.9);
    color: #ffffff;
    font-size: 18px;
    line-height: 1;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.35);
  }

  .hero-video-lightbox {
    background-color: var(--color--white);
    color: var(--color--neutral);
    border-radius: 50%;
    justify-content: center;
    align-items: center;
    width: 50px;
    height: 50px;
    transition: transform 0.3s;
    display: flex;
    border: 0;
    padding: 0;
    font: inherit;
    line-height: inherit;
    cursor: pointer;
    appearance: none;
  }
</style>

<script is:inline>
  (() => {
    const initVideoPopup = () => {
      if (document.documentElement.dataset.videoPopupBound === "true") return;
      document.documentElement.dataset.videoPopupBound = "true";

      const modal = document.querySelector("[data-video-modal]");
      const frame = document.querySelector("[data-video-frame]");
      if (!modal || !frame) return;

      const openModal = (url) => {
        const embedUrl = url.includes("youtube.com")
          ? url.replace("watch?v=", "embed/") + "?autoplay=1"
          : url;
        frame.innerHTML = `<iframe src="${embedUrl}" title="Demo video" allow="autoplay; fullscreen" allowfullscreen loading="lazy" style="width:100%;height:100%;border:0;"></iframe>`;
        modal.classList.add("is-open");
        modal.setAttribute("aria-hidden", "false");
        document.body.style.overflow = "hidden";
      };

      const closeModal = () => {
        modal.classList.remove("is-open");
        modal.setAttribute("aria-hidden", "true");
        frame.innerHTML = "";
        document.body.style.overflow = "";
      };

      document.addEventListener("click", (event) => {
        const target = event.target;
        if (!(target instanceof Element)) return;

        const trigger = target.closest(".hero-video-lightbox");
        if (trigger) {
          event.preventDefault();
          const url =
            trigger.getAttribute("data-video-url") ||
            trigger.getAttribute("href");
          if (url) openModal(url);
          return;
        }

        if (target.closest("[data-video-close]")) {
          event.preventDefault();
          closeModal();
        }
      });

      document.addEventListener("keydown", (event) => {
        if (event.key === "Escape" && modal.classList.contains("is-open")) {
          closeModal();
        }
      });
    };

    initVideoPopup();
    document.addEventListener("astro:page-load", initVideoPopup);
  })();
</script>
