---
import Container from "../ui/Container.astro";
import Button from "../ui/Button.astro";
import AppImage from "../ui/AppImage.astro";

const { hero } = Astro.props;
---

<section
  class="relative overflow-hidden bg-[url('/src/assets/images/hero-v2.png')] bg-cover bg-center pt-[var(--_typography-size---gap--page-top-gap)] pb-[var(--_typography-size---gap--section-gap)] text-white"
  data-hero-v2
>
  <Container>
    <div class="relative flex flex-col items-center text-center">
      <div
        class="mx-auto max-w-[800px] min-[1280px]:max-w-[900px] min-[1440px]:max-w-[1050px]"
      >
        <span
          class="text-gradient text-[16px] font-medium leading-[1.1]"
          data-hero-v2-eyebrow
        >
          {hero.eyebrow}
        </span>
        <h1
          class="mt-6 font-title text-[length:var(--_typography-size---typography--h1)] font-normal leading-[1.1] tracking-[-0.02em] text-white"
          data-hero-v2-title
        >
          {hero.title.prefix}
          <span class="font-semibold text-white">{hero.title.highlight}</span>
          {hero.title.suffix}
        </h1>
        <p
          class="mx-auto mt-5 max-w-[676px] text-[20px] leading-[1.6] text-[#c4c4c4] min-[1440px]:mt-[30px] max-[479px]:mt-4"
          data-hero-v2-summary
        >
          {hero.summary.prefix}
          <span class="font-semibold text-white">{hero.summary.highlight}</span>
          {hero.summary.suffix}
        </p>
      </div>
      <div
        class="mt-10 flex flex-wrap items-center justify-center gap-6 min-[1440px]:mt-12 max-[991px]:mt-[30px] max-[767px]:mt-6 max-[479px]:mt-5 max-[479px]:flex-wrap-reverse max-[479px]:gap-5"
        data-hero-v2-buttons
      >
        <Button href={hero.primaryCta.href}>{hero.primaryCta.label}</Button>
        <div class="hero-video-lightbox-wrapper">
          <button
            type="button"
            class="hero-video-lightbox"
            aria-label={hero.secondaryCta.label}
            aria-haspopup="dialog"
            data-video-url={hero.secondaryCta.href}
          >
            <span class="hero-video-lightbox-icon">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="15"
                height="21"
                viewBox="0 0 15 21"
                fill="none"
                aria-hidden="true"
              >
                <path
                  d="M13.871 9.71006C14.5445 10.195 14.5445 11.1975 13.871 11.6824L1.97601 20.2468C1.17219 20.8255 0.0507813 20.2511 0.0507813 19.2606L0.0507819 2.13186C0.050782 1.14136 1.17219 0.566934 1.97601 1.14569L13.871 9.71006Z"
                  fill="currentColor"></path>
              </svg>
            </span>
          </button>
          <div class="hero-video-lightbox-text">
            {hero.secondaryCta.label}
          </div>
        </div>
      </div>

      <div
        class="pointer-events-none absolute left-0 top-[30%] max-[991px]:top-[100px] max-[767px]:top-0 max-[479px]:top-[-5%]"
        data-hero-v2-left-shape
      >
        <AppImage
          src={hero.shapes.left}
          alt=""
          width="125"
          height="125"
          class="opacity-70"
          aria-hidden="true"
        />
      </div>
      <div
        class="pointer-events-none absolute right-0 top-1/2 min-[1440px]:right-[5%] max-[991px]:top-auto max-[991px]:bottom-[7%] max-[767px]:bottom-[7%] max-[479px]:bottom-0"
        data-hero-v2-right-shape
      >
        <AppImage
          src={hero.shapes.right}
          alt=""
          width="82"
          height="82"
          class="opacity-70 max-[767px]:w-[50px]"
          aria-hidden="true"
        />
      </div>
    </div>
  </Container>

  <div
    class="mt-[-10px] mx-auto max-w-[970px] min-[1280px]:max-w-[1170px] min-[1440px]:max-w-[1610px] min-[1440px]:mt-[-15px] max-[991px]:max-w-[740px] max-[767px]:max-w-[530px] max-[767px]:mt-[30px] max-[767px]:px-[15px] max-[479px]:mt-6"
  >
    <div
      class="flex items-end justify-center gap-6 min-[1440px]:gap-8 max-[991px]:gap-5 max-[767px]:grid max-[767px]:grid-cols-2 max-[767px]:grid-rows-2 max-[767px]:auto-cols-fr max-[767px]:items-stretch max-[767px]:gap-5 max-[479px]:gap-2.5 max-[479px]:grid-rows-[auto]"
      data-hero-v2-cards
    >
      {
        hero.images.map((image: { src: string; alt: string }) => (
          <div
            class="flex-1 rounded-[var(--_typography-size---gap--border-radius)] bg-gradient-to-r from-[#d8ae6b4d] to-[#1ad0794d] p-[1px] max-[479px]:p-[0.5px]"
            data-hero-v2-card
          >
            <AppImage
              src={image.src}
              alt={image.alt}
              width="340"
              height="250"
              class="w-full h-full object-fill rounded-[var(--_typography-size---gap--border-radius)]"
              loading="eager"
              fetchpriority="high"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>

<div class="hero-video-modal" data-video-modal aria-hidden="true">
  <div class="hero-video-overlay" data-video-close></div>
  <div
    class="hero-video-dialog"
    role="dialog"
    aria-modal="true"
    aria-label="Demo video"
  >
    <button class="hero-video-close" type="button" data-video-close>
      <span class="sr-only">Close video</span>
      &#10005;
    </button>
    <div class="hero-video-frame" data-video-frame></div>
  </div>
</div>

<style>
  .hero-video-modal {
    position: fixed;
    inset: 0;
    z-index: 9999;
    display: none;
    align-items: center;
    justify-content: center;
    padding: 24px;
  }

  .hero-video-modal.is-open {
    display: flex;
  }

  .hero-video-overlay {
    position: absolute;
    inset: 0;
    background: rgba(8, 12, 20, 0.78);
    backdrop-filter: blur(4px);
  }

  .hero-video-dialog {
    position: relative;
    z-index: 1;
    width: min(92vw, 960px);
    background: #0e1522;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 40px 120px rgba(0, 0, 0, 0.55);
    border: 1px solid rgba(255, 255, 255, 0.08);
  }

  .hero-video-frame {
    width: 100%;
    aspect-ratio: 16 / 9;
    background: #000;
  }

  .hero-video-close {
    position: absolute;
    top: 14px;
    right: 14px;
    z-index: 2;
    width: 38px;
    height: 38px;
    border-radius: 999px;
    border: 0;
    background: rgba(15, 23, 42, 0.9);
    color: #ffffff;
    font-size: 18px;
    line-height: 1;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.35);
  }

  .hero-video-lightbox {
    background-color: var(--color--white);
    color: var(--color--neutral);
    border-radius: 50%;
    justify-content: center;
    align-items: center;
    width: 50px;
    height: 50px;
    transition: transform 0.3s;
    display: flex;
    border: 0;
    padding: 0;
    font: inherit;
    line-height: inherit;
    cursor: pointer;
    appearance: none;
  }
</style>

<script is:inline>
  (() => {
    const initVideoPopup = () => {
      if (document.documentElement.dataset.videoPopupBound === "true") return;
      document.documentElement.dataset.videoPopupBound = "true";

      const modal = document.querySelector("[data-video-modal]");
      const frame = document.querySelector("[data-video-frame]");
      if (!modal || !frame) return;

      const openModal = (url) => {
        const embedUrl = url.includes("youtube.com")
          ? url.replace("watch?v=", "embed/") + "?autoplay=1"
          : url;
        frame.innerHTML = `<iframe src="${embedUrl}" title="Demo video" allow="autoplay; fullscreen" allowfullscreen loading="lazy" style="width:100%;height:100%;border:0;"></iframe>`;
        modal.classList.add("is-open");
        modal.setAttribute("aria-hidden", "false");
        document.body.style.overflow = "hidden";
      };

      const closeModal = () => {
        modal.classList.remove("is-open");
        modal.setAttribute("aria-hidden", "true");
        frame.innerHTML = "";
        document.body.style.overflow = "";
      };

      document.addEventListener("click", (event) => {
        const target = event.target;
        if (!(target instanceof Element)) return;

        const trigger = target.closest(".hero-video-lightbox");
        if (trigger) {
          event.preventDefault();
          const url =
            trigger.getAttribute("data-video-url") ||
            trigger.getAttribute("href");
          if (url) openModal(url);
          return;
        }

        if (target.closest("[data-video-close]")) {
          event.preventDefault();
          closeModal();
        }
      });

      document.addEventListener("keydown", (event) => {
        if (event.key === "Escape" && modal.classList.contains("is-open")) {
          closeModal();
        }
      });
    };

    initVideoPopup();
    document.addEventListener("astro:page-load", initVideoPopup);
  })();
</script>
