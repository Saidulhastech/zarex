---
import Container from "../ui/Container.astro";
import FormInput from "../ui/FormInput.astro";
---

<section
  data-sign-up-section
  class="bg-[url('/src/assets/images/Sign-In-BG.png')] bg-cover bg-center bg-no-repeat py-[var(--_typography-size---gap--section-gap)]"
>
  <Container>
    <div
      data-sign-up-wrapper
      class="mx-auto flex w-full flex-col items-center rounded-[8px]"
    >
      <h2
        class="mb-[60px] max-w-[500px] text-center font-title text-[length:var(--_typography-size---typography--h3)] font-normal leading-[1.3] tracking-[-0.02em] text-white min-[1440px]:mb-[88px] min-[1440px]:max-w-[530px] max-[991px]:max-w-[450px] max-[991px]:mb-[40px]"
      >
        Join Now to Streamline Your Experience With Our
        <span class="font-semibold text-white">Zarex</span> Features
      </h2>

      <div
        class="relative w-full max-w-[648px] min-w-[648px] max-[991px]:min-w-[450px] max-[479px]:min-w-full"
      >
        <form class="relative" method="get">
          <div class="flex flex-col items-center">
            <div
              class="grid w-full grid-cols-2 gap-[40px] min-[1440px]:gap-[48px] max-[991px]:grid-cols-1 max-[991px]:gap-[30px]"
            >
              <FormInput
                maxlength={256}
                name="firstname"
                placeholder="First name*"
                type="text"
                required
              />
              <FormInput
                maxlength={256}
                name="lastname"
                placeholder="Last name*"
                type="text"
                required
              />
            </div>

            <div
              class="mt-[30px] grid w-full grid-cols-2 gap-[40px] min-[1440px]:mt-[64px] min-[1440px]:gap-[48px] max-[991px]:mt-[24px] max-[991px]:grid-cols-1 max-[991px]:gap-[30px]"
            >
              <FormInput
                maxlength={256}
                name="Username-or-email"
                placeholder="Email*"
                type="email"
                required
              />
              <FormInput
                maxlength={256}
                name="Phone"
                placeholder="Phone*"
                type="tel"
                required
              />
            </div>

            <div
              class="mt-[30px] grid w-full grid-cols-2 gap-[40px] min-[1440px]:mt-[64px] min-[1440px]:gap-[48px] max-[991px]:mt-[24px] max-[991px]:grid-cols-1 max-[991px]:gap-[30px]"
            >
              <FormInput
                maxlength={256}
                name="password"
                placeholder="Password*"
                type="password"
                required
              />
              <FormInput
                maxlength={256}
                name="confirm-password"
                placeholder="Confirm password*"
                type="password"
                required
              />
            </div>
          </div>

          <label
            class="mt-[24px] flex items-center gap-[8px] min-[1440px]:mt-[32px]"
          >
            <input type="checkbox" name="terms" class="peer sr-only" required />
            <span
              class="relative h-[16px] w-[16px] rounded-[4px] border border-[#b1b1b1] peer-checked:border-[#d8ae6b] peer-checked:bg-[#d8ae6b] after:content-[''] after:absolute after:left-[5px] after:top-[1px] after:h-[9px] after:w-[5px] after:rotate-45 after:border-b-2 after:border-r-2 after:border-[#0e1522] after:opacity-0 peer-checked:after:opacity-100"
            ></span>
            <span
              class="font-title text-[14px] font-medium leading-[1.1] text-[#b1b1b1]"
            >
              I agree all terms and conditions
            </span>
          </label>

          <div
            class="mt-[40px] flex justify-center min-[1440px]:mt-[64px] max-[991px]:mt-[30px]"
          >
            <input
              type="submit"
              value="Sign Up"
              class="submit-button border-0 w-full"
            />
          </div>

          <div
            class="mt-[20px] flex w-full items-center justify-center gap-[5px] min-[1440px]:mt-[24px] max-[991px]:flex-wrap max-[991px]:gap-[12px]"
          >
            <span
              class="font-title text-[14px] font-medium leading-[1.1] text-[#b1b1b1]"
            >
              Already Have an Account?
            </span>
            <a
              href="/authentication/sign-in"
              class="font-title text-[14px] font-semibold leading-[1.1] tracking-[0.02em] text-white underline transition hover:text-[#d8ae6b]"
            >
              Sign in
            </a>
          </div>
        </form>
      </div>

      <div
        class="mt-[44px] w-full max-w-[648px] min-[1440px]:mt-[64px] max-[991px]:mt-[30px]"
      >
        <div class="flex items-center justify-between gap-[11px]">
          <span
            class="h-px w-full min-w-[242px] bg-[#888] max-[991px]:min-w-[130px] max-[479px]:min-w-[50px]"
          ></span>
          <span
            class="flex-none font-title text-[18px] leading-none tracking-[0.02em] text-white"
          >
            Or Register With
          </span>
          <span
            class="h-px w-full min-w-[242px] bg-[#888] max-[991px]:min-w-[130px] max-[479px]:min-w-[50px]"
          ></span>
        </div>

        <div
