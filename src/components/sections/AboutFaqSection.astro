---
import Container from "../ui/Container.astro";

const { faq } = Astro.props;
---

<section
  class="bg-[url('/src/assets/images/faq-bg.png')] bg-cover bg-center py-[var(--_typography-size---gap--section-gap)] text-white"
  data-about-faq
>
  <Container
    class="max-w-[970px] px-[15px] min-[1280px]:max-w-[1220px] min-[1440px]:max-w-[1330px] max-[991px]:max-w-[740px] max-[767px]:max-w-[530px] max-[479px]:max-w-full"
  >
    <div class="flex flex-col items-center text-center" data-about-faq-heading>
      <div class="max-w-[710px]">
        <h2
          class="font-title text-[length:var(--_typography-size---typography--h2)] font-normal leading-[1.2] tracking-[-0.02em] text-white"
        >
          {faq.title.prefix}
          <span class="text-gradient">{faq.title.highlight}</span>
          {faq.title.suffix}
        </h2>
      </div>
      <p class="mt-5 max-w-[624px] text-[18px] text-[#c4c4c4]">
        {faq.summary}
      </p>
    </div>

    <div
      class="mt-[var(--_typography-size---gap--content-gap)] flex flex-col gap-5"
    >
      {
        faq.items.map((item: { question: string; answer: string }) => (
          <details
            class="group rounded-[18px] border border-[#262c38] bg-[#0e1522] px-6 py-[22px]"
            data-about-faq-item
          >
            <summary class="flex cursor-pointer list-none items-center justify-between gap-6">
              <span class="font-title text-[18px] font-medium text-white">
                {item.question}
              </span>
              <span class="flex h-9 w-9 items-center justify-center rounded-full border border-white/30 text-white transition group-open:rotate-180 group-open:border-transparent group-open:bg-gradient-to-r group-open:from-[#d8ae6b] group-open:to-[#1ad079] group-open:text-[#0e1522]">
                <svg
                  width="18"
                  height="18"
                  viewBox="0 0 18 18"
                  fill="none"
                  aria-hidden="true"
                >
                  <path
                    d="M4 7.5L9 12.5L14 7.5"
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
              </span>
            </summary>
            <p class="mt-4 text-[16px] leading-[1.7] text-[#c4c4c4]">
              {item.answer}
            </p>
          </details>
        ))
      }
    </div>
  </Container>
</section>

