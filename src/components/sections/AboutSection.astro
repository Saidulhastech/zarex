---
import Container from "../ui/Container.astro";
import Button from "../ui/Button.astro";
import AppImage from "../ui/AppImage.astro";

const { about } = Astro.props;
const titleParts = about.title.split("LinkedIn");
---

<section
  class="bg-[url('/src/assets/images/about-bg.png')] bg-cover bg-center py-[100px] text-white"
  data-about-section
>
  <Container
    class="max-w-[970px] px-[15px] min-[1280px]:max-w-[1220px] min-[1440px]:max-w-[1330px] max-[991px]:max-w-[740px] max-[767px]:max-w-[530px] max-[479px]:max-w-full"
  >
    <div
      class="mx-auto text-center max-w-[640px] min-[1280px]:max-w-[680px] min-[1440px]:max-w-[740px] max-[991px]:max-w-[550px] max-[767px]:max-w-[500px]"
    >
      <h2 class="z-10 text-white tracking-[-0.02em]" data-about-heading>
        {
          titleParts.length === 2 ? (
            <>
              {titleParts[0]}
              <span class="bg-gradient-to-r from-[#d8ae6b] to-[#1ad079] bg-clip-text text-transparent">
                LinkedIn
              </span>
              {titleParts[1]}
            </>
          ) : (
            about.title
          )
        }
      </h2>
    </div>

    <div
      class="mt-[70px] grid grid-cols-[1fr_0.4fr_1fr] place-items-center gap-4 min-[1440px]:mt-[80px] max-[991px]:mt-[60px] max-[767px]:mt-[50px] max-[479px]:mt-[40px] max-[767px]:grid-cols-1 max-[767px]:gap-[40px] max-[479px]:gap-[30px]"
      data-about-content-block
    >
      <div
        class="relative max-w-[80%] min-[1920px]:max-w-none max-[767px]:max-w-full"
        data-about-left-column
      >
        <div
          class="flex flex-col items-center rotate-[-11deg] max-[767px]:rotate-0"
          data-about-left-main
        >
          <span
            class="text-[20px] leading-[1.2] text-[#888] min-[1440px]:text-[24px]"
            >{about.left.label}</span
          >
          <AppImage
            src={about.left.image}
            alt="Before profile"
            width="615"
            height="745"
            class="mt-3 rounded-[16px] border-2 border-white/10"
            loading="lazy"
          />
        </div>
        <AppImage
          src={about.left.badges[0]}
          alt="Before metric"
          width="150"
          height="80"
          class="absolute left-[-40px] top-[180px] w-[150px] rotate-[-20deg] rounded-[16px] border-2 border-white/20 min-[1280px]:left-[-60px] min-[1440px]:left-[-120px] min-[1440px]:top-[150px] max-[991px]:w-[100px] max-[991px]:left-[-40px] max-[479px]:w-[80px] max-[479px]:left-[-35px] max-[479px]:top-[80px]"
          loading="lazy"
          data-about-badge="left-upper"
        />
        <AppImage
          src={about.left.badges[1]}
          alt="Before metric"
          width="150"
          height="80"
          class="absolute right-[-90px] top-[45%] w-[150px] rotate-[6deg] rounded-[16px] border-2 border-white/20 min-[1440px]:w-[173px] min-[1440px]:right-[-100px] max-[991px]:w-[100px] max-[991px]:right-[-70px] max-[767px]:right-[-30px] max-[479px]:w-[80px]"
          loading="lazy"
          data-about-badge="left-lower"
        />
      </div>

      <div
        class="flex flex-col items-center mt-[-150px] min-[1280px]:mt-[-180px] min-[1440px]:mt-[-200px] min-[1920px]:mt-[-240px] max-[767px]:mt-0 max-[767px]:hidden"
      >
        <AppImage
          src={about.center.logo}
          alt="Zarex logo"
          width="150"
          height="40"
          class="w-auto"
          loading="lazy"
          data-about-logo
        />
        <AppImage
          src={about.center.arrow}
          alt="Arrow"
          width="100"
          height="96"
          class="mt-6 h-24 w-auto"
          loading="lazy"
          data-about-arrow
        />
      </div>

      <div
        class="relative max-w-[80%] justify-self-end min-[1920px]:max-w-none max-[767px]:max-w-full max-[767px]:justify-self-center"
        data-about-right-column
      >
        <div
          class="flex flex-col items-center rotate-[11deg] max-[767px]:rotate-0"
          data-about-right-main
        >
          <span
            class="text-[20px] leading-[1.2] text-[#888] min-[1440px]:text-[24px]"
            >{about.right.label}</span
          >
          <AppImage
            src={about.right.image}
            alt="After profile"
            width="615"
            height="745"
            class="mt-3 rounded-[16px] border-2 border-white/10"
            loading="lazy"
          />
        </div>
        <AppImage
          src={about.right.badges[0]}
          alt="After metric"
          width="150"
          height="80"
          class="absolute left-[-75px] top-[30px] w-[150px] rotate-[-4deg] rounded-[16px] border-2 border-white/20 min-[1440px]:left-[-60px] min-[1440px]:top-[60px] max-[991px]:w-[100px] max-[991px]:left-[-45px] max-[479px]:w-[80px] max-[479px]:left-[-22px]"
          loading="lazy"
          data-about-badge="right-upper"
        />
        <AppImage
          src={about.right.badges[1]}
          alt="After metric"
          width="150"
          height="80"
          class="absolute right-[-40px] top-[45%] w-[150px] rotate-[27deg] rounded-[16px] border-2 border-white/20 min-[1280px]:right-[-70px] min-[1440px]:w-[173px] min-[1440px]:right-[-100px] max-[991px]:w-[100px] max-[479px]:w-[80px] max-[479px]:top-[40%] max-[479px]:right-[-26px]"
          loading="lazy"
          data-about-badge="right-lower"
        />
      </div>
    </div>

    <div
      class="mt-5 flex justify-center min-[1440px]:mt-6 max-[767px]:mt-[30px]"
    >
      <Button href={about.cta.href} variant="outline">
        {about.cta.label}
      </Button>
    </div>
  </Container>
</section>

