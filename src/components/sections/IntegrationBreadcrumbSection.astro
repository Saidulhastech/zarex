---
import Container from "../ui/Container.astro";

const {
  subtitle = "",
  titlePrefix = "",
  titleHighlight = "",
  titleSuffix = "",
  summaryPrefix = "",
  summaryHighlight = "",
  summarySuffix = "",
} = Astro.props;
---

<section data-integration-breadcrumb-section class="bg-[url('/src/assets/images/Breadcrumb-BG.png')] bg-cover bg-center bg-no-repeat pt-[190px] pb-[112px] min-[1280px]:pt-[200px] min-[1440px]:pt-[240px] max-[991px]:pt-[140px] max-[991px]:pb-[80px] max-[767px]:pt-[130px] max-[767px]:pb-[60px]">
  <Container>
    <div data-integration-breadcrumb-wrapper class="flex flex-col items-center text-center">
      <p class="text-gradient text-[20px] font-medium leading-[1.3] max-[767px]:text-[18px]">
        {subtitle}
      </p>
      <div class="mt-5 max-w-[600px] min-[1280px]:max-w-[650px] min-[1440px]:max-w-[720px] max-[991px]:max-w-[500px] max-[767px]:mt-4 max-[767px]:max-w-[450px]">
        <h1 class="font-title text-[length:var(--_typography-size---typography--h1)] font-normal leading-[1.2] tracking-[-0.02em] text-white">
          {titlePrefix}
          <span class="highlight-text">{titleHighlight}</span>
          {titleSuffix}
        </h1>
      </div>
      <div class="mt-[var(--_typography-size---gap--subtitle-gap)] max-w-[528px] text-[20px] text-white">
        <p>
          {summaryPrefix}
          <span class="font-semibold text-white">{summaryHighlight}</span>
          {summarySuffix}
        </p>
      </div>
    </div>
  </Container>
</section>

