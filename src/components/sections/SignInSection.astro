---
import Container from "../ui/Container.astro";
import FormInput from "../ui/FormInput.astro";
---

<section
  data-sign-in-section
  class="bg-[url('/src/assets/images/Sign-In-BG.png')] bg-cover bg-center bg-no-repeat py-[var(--_typography-size---gap--section-gap)]"
>
  <Container>
    <div
      data-sign-in-wrapper
      class="mx-auto flex w-full flex-col items-center rounded-[8px]"
    >
      <h2
        class="mb-[60px] max-w-[440px] text-center font-title text-[length:var(--_typography-size---typography--h3)] font-normal leading-[1.3] tracking-[-0.02em] text-white min-[1280px]:mb-[88px] min-[1280px]:max-w-[460px] max-[991px]:max-w-[400px] max-[767px]:mb-[50px] max-[767px]:max-w-[380px] max-[479px]:mb-[40px]"
      >
        Enter Your Email and Password to Access Your Account
      </h2>

      <form class="w-full max-w-[421px]" method="get">
        <div
          class="flex w-full flex-col items-center gap-[35px] min-[1280px]:gap-[60px] max-[767px]:gap-[30px]"
        >
          <FormInput
            maxlength={256}
            name="Username-or-email"
            placeholder="Username or email"
            type="email"
            required
          />
          <FormInput
            maxlength={256}
            name="Password"
            placeholder="Password"
            type="password"
            required
          />
        </div>

        <div
          class="mt-[16px] flex w-full items-center justify-between min-[1280px]:mt-[20px] max-[479px]:flex-wrap"
        >
          <label class="flex items-center gap-[8px]">
            <input
              type="checkbox"
              name="Remember"
              class="peer sr-only"
              required
            />
            <span
              class="relative h-[16px] w-[16px] rounded-[4px] border border-[#b1b1b1] peer-checked:border-[#d8ae6b] peer-checked:bg-[#d8ae6b] after:content-[''] after:absolute after:left-[5px] after:top-[1px] after:h-[9px] after:w-[5px] after:rotate-45 after:border-b-2 after:border-r-2 after:border-[#0e1522] after:opacity-0 peer-checked:after:opacity-100"
            ></span>
            <span
              class="font-title text-[14px] font-medium leading-[1.1] text-[#b1b1b1]"
            >
              Remember me
            </span>
          </label>
        </div>

        <div class="mt-[72px] flex w-full justify-center">
          <input
            type="submit"
            value="Sign In"
            class="submit-button border-0 w-full"
          />
        </div>
      </form>

      <div class="mt-[30px] w-full max-w-[421px] min-[1280px]:mt-[48px]">
        <div class="flex items-center justify-between gap-[11px]">
          <span
            class="h-px w-full min-w-[190px] bg-[#888] max-[479px]:min-w-[100px]"
          ></span>
          <span
            class="flex-none font-title text-[18px] leading-none tracking-[0.02em] text-white"
          >
            Or
          </span>
          <span
            class="h-px w-full min-w-[190px] bg-[#888] max-[479px]:min-w-[100px]"
          ></span>
        </div>

        <a
          href="https://example.com"
          target="_blank"
          rel="noopener noreferrer"
          class="mt-[30px] flex items-center justify-center gap-[8px] rounded-[41px] border border-[#888] px-[20px] py-[13px] text-white transition hover:bg-black"
        >
          <span class="flex items-center justify-center">
            <svg
              width="17"
              height="16"
              viewBox="0 0 17 16"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
